@model IEnumerable<ProductService.Models.Category>

<h2>Categories</h2>

<p>
    <a class="btn btn-primary" href="/Category/Create">Create New</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.CategoryName</td>
                <td>
                    <a href="/Category/Details/@item.Id">Details</a> |
                    <a href="/Category/Edit/@item.Id">Edit</a> |
                    <a href="/Category/Delete/@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
