@model UserService.Models.LoginDto

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow-lg p-4" style="width: 420px; border-radius: 12px;">

        <div class="text-center mb-3">
            <h3 class="fw-bold">Welcome Back</h3>
            <p class="text-muted">Login to continue</p>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.Error</div>
        }

        <form asp-action="Login" method="post">
            <div class="form-group mb-3">
                <label class="fw-semibold">Username</label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-person"></i>
                    </span>
                    <input asp-for="UserName" class="form-control" placeholder="Enter username" />
                </div>
                <span asp-validation-for="UserName" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label class="fw-semibold">Password</label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-lock"></i>
                    </span>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" />
                </div>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <button class="btn btn-primary w-100 mt-2 py-2" type="submit" style="border-radius: 6px;">
                Login
            </button>
        </form>

        <div class="text-center mt-3">
            <small class="text-muted">
                Don't have an account?
                <a asp-controller="Auth" asp-action="Register" class="text-decoration-none">Register</a>
            </small>
        </div>
    </div>
</div>

<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.11.1/font/bootstrap-icons.min.css" />
