@model FrontendByDotnteMVC.Models.Customer.Customer

<h2>Customer Details</h2>

<table class="table table-bordered">
    <tr><th>ID</th><td>@Model.Id</td></tr>
    <tr><th>Name</th><td>@Model.Name</td></tr>
    <tr><th>Email</th><td>@Model.Email</td></tr>
    <tr><th>UserName</th><td>@Model.UserName</td></tr>
    <tr><th>Phone</th><td>@Model.Phone</td></tr>
</table>

<a href="/Customer/Index" class="btn btn-primary">Back</a>
<a href="/Customer/Edit/@Model.Id" class="btn btn-warning">Edit</a>
