@model IEnumerable<ProductService.Models.Product>

<h2>Products</h2>

<p>
    <a class="btn btn-primary" href="/Product/Create">Create New</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>CategoryId</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.ProductName</td>
                <td>@item.ProductDescription</td>
                <td>@item.Price</td>
                <td>@item.CategoryId</td>
                <td>
                    <a href="/Product/Details/@item.Id">Details</a> |
                    <a href="/Product/Edit/@item.Id">Edit</a> |
                    <a href="/Product/Delete/@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
